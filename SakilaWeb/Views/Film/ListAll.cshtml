@model SakilaWeb.ViewModel.FilmsListAllViewModel

<form asp-controller="Film" asp-action="ListAll" method="get">
    <div class="form-group">
        <label>Id</label>
        <input type="number" class="form-control" asp-for="SearchId" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var film in Model.FilmsList) {
        <tr>
            <td>@film.Id</td>
            <td>@film.Title</td>
        </tr>
        }
    </tbody>
</table>