@model SakileWeb.ViewModel.AssignUserToRoleViewModel 

<form asp-controller="Users" asp-action="AssignUserToRole" method="POST" >
    <div class="form-group">
        <label>User</label>
        <select class="form-control" asp-items="@(new SelectList(ViewBag.UserList,"Id","UserName"));" asp-for="UserId"></select>
    </div>

    <div class="form-group">
        <label>Role</label>
        <select class="form-control" asp-items="@(new SelectList(ViewBag.RoleList,"Id","Name"));" asp-for="RoleId"></select>
    </div>

    <input type="submit" class="btn btn-primary" value="Save" />
</form>